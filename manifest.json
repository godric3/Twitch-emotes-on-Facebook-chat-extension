{
  "manifest_version": 2,

  "name": "Twitch Emotes for Facebook chat",
  "description": "Paste Twitch Emotes(text) into Facebook chat",
  "version": "1.0",
  
   "browser_action": {
   "default_popup": "popup.html"
  },
   "permissions": [
    "activeTab",
    "tabs", "https://www.facebook.com/*"
  ],
  "content_scripts": [
   {
     "matches": ["https://www.facebook.com/*"],
     "js": ["script.js"],
     "run_at": "document_start",
     "all_frames": true
   }
 ]
  
}